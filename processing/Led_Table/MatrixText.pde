  int size;
  
  
  
  MatrixText(int size) {
    this.size = size;
  }
  
  /* Takes in a character and returns the 5 bytes for that character */
  byte[] getCharBytes(char c) {
    // subtract offset of 32 from c to line up with the charTable font
    c -= 32;    
    // return the 5 bytes that define that character on a 5x8 grid
    return subset(charTable, c*5, 5);
  }
  
  void drawChar(char c, int xCoord, int yCoord) {
    int index = 0;
    int pSize = this.size;
    byte[] m = getCharBytes(c);
    int x,y;
    for (byte i = 0; i < 8; ++i) {
      for (byte j = 0; j < 5; ++j) {
        // character is defined by a '1' in the byte if it is on.
        // this finds if there is a bit in the position
        int val = m[j]>>i & 1;
        
        if (val>0){ // need to write something to display
          // calculate x and y values from index
          y = floor(index/5);
          x = (index) - (y*5);    
          rect(x*pSize + xCoord, y*pSize + yCoord, pSize, pSize);
        }
        index++;
      }
    } 
  }
  
  void drawString(String input, int xCoord, int yCoord) {
    for (int i = 0; i < input.length(); ++i) {
      // draw each character, then draw the next one 6 'pixels' away (width 5 font)
      drawChar(input.charAt(i), xCoord + (this.size*6*i), yCoord); 
    }
  }
  
  int stringWidth(String s) {
    // each char in the string is 6 'pixels' wide    
    return s.length() * 6 * this.size;
  }
  
  int stringHeight() {
    return this.size * 8;
  }
  
  PGraphics generatePGraphics(String s) {
    PGraphics p = createGraphics(stringWidth(s),stringHeight(),P3D);
    p.beginDraw();
    p.noStroke();
    
    // copy of drawString and drawChar using PGraphics:
    for (int i = 0; i < s.length(); i++) {
      int index = 0;
      int pSize = this.size; // 'pixel' size
      byte[] m = getCharBytes(s.charAt(i));
      int x,y;
      for (byte k = 0; k < 8; ++k) {
        for (byte j = 0; j < 5; ++j) {
          // character is defined by a '1' in the byte if it is on.
          // this finds if there is a bit in the position
          int val = m[j]>>k & 1;
          
          if (val>0){ // need to write something to display
            // calculate x and y values from index
            y = floor(index/5);
            x = (index) - (y*5);    
            p.rect(x*pSize + (this.size * 6 *i), y*pSize, pSize, pSize);
          }
          index++;
        }
      } 
    }
    
    p.endDraw();
    
    
    return p;
  }
  
